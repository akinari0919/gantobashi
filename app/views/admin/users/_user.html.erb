<tr>
  <td class='align-middle'><%= user.id %></td>
  <td class='align-middle'><%= user.name %></td>
  <td class='align-middle'><%= user.email %></td>
  <td class='align-middle'><%= user.role %></td>
  <td class='align-middle'><%= user.offense_win_count %></td>
  <td class='align-middle h-110'>
    <% if user.glaring_face_photos.find_by(main_choiced: true).present? %>
      <img src="data:image/jpeg;base64,<%= user.glaring_face_photos.find_by(main_choiced: true).image %>" width="100" height="100" />
    <% else %>
      <%= t('defaults.not_set') %>
    <% end %>
  </td>
  <td class='align-middle'>
    <% if user.glaring_face_photos.find_by(main_choiced: true).present? %>
      <%= user.glaring_face_photos.find_by(main_choiced: true).defense_win_count %>
    <% else %>
      -
    <% end %>
  </td>
  <td class='align-middle'>
    <%= link_to t('defaults.show'), admin_user_path(user), class: 'btn btn-info' %>
  </td>
</tr>
