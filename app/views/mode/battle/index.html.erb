<main>
  <div class = 'top-contents' >
    <table>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>win_count</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
        <% gfp = user.glaring_face_photos.find_by(main_choiced: true) %>
        <% if gfp.present? %>
          <tr>
            <td><%= user.name %></td>
            <td><img src="data:image/jpeg;base64,<%="#{gfp.image}"%>" width="100" height="100" /></td>
            <td><%= "☆×#{gfp.defense_win_count}" %></td>
            <td><%= link_to 'Show', mode_battle_path(user), class:"button-40" %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</main>
